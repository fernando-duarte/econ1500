{
  "name": "econ1500",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "test:e2e": "PLAYWRIGHT_SKIP_COVERAGE=true playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test": "PLAYWRIGHT_SKIP_COVERAGE=true playwright test",
    "test:coverage": "playwright test",
    "test:form-validation": "playwright test form-validation.spec.ts --trace on",
    "coverage:show": "monocart show-report monocart-report/monocart-report.html",
    "coverage:serve": "http-server monocart-report -p 8090 --cors -o /coverage/index.html",
    "coverage:clean": "rimraf ./monocart-report/coverage ./monocart-report/assets ./monocart-report/monocart-report.* ./monocart-report/.last-run.json",
    "test:clean": "rimraf ./test-results ./playwright-report ./monocart-report && npx playwright clear-cache",
    "test:clean:all": "npm run test:clean && npm run coverage:clean && rimraf ./.nyc_output ./coverage"
  },
  "lint-staged": {
    "config": "lint-staged.config.mjs"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.503.0",
    "next": "15.3.1",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.1",
    "tailwind-merge": "^3.2.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22.15.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "monocart-reporter": "^2.9.18",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
