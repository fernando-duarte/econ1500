{
  "name": "econ1500",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:all": "eslint --config ./config/eslint.js .",
    "lint:all:fix": "eslint --config ./config/eslint.js . --fix",
    "prepare": "husky",
    "format": "prettier --config ./config/prettier.js --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "test:e2e": "playwright test --reporter=list",
    "test:e2e:non-interactive": "playwright test --reporter=json > test-results/test-results.json",
    "test:auth-setup": "npx tsx tests/e2e/setup-auth.ts",
    "clean:test": "rimraf test-results playwright-report",
    "postinstall": "npx playwright install --with-deps",
    "pretest:e2e:coverage": "rimraf ./.v8-coverage && mkdir -p ./.v8-coverage && mkdir -p ./monocart-report",
    "test:e2e:coverage:single": "cross-env NODE_V8_COVERAGE=./.v8-coverage playwright test tests/e2e/auth.spec.ts --project=chromium",
    "test:e2e:coverage:single:safe": "cross-env NODE_V8_COVERAGE=./.v8-coverage playwright test tests/e2e/auth.spec.ts --project=chromium || echo 'Test may have failed but coverage will still be processed'",
    "test:e2e:coverage:core": "cross-env NODE_V8_COVERAGE=./.v8-coverage playwright test tests/e2e/auth.spec.ts tests/e2e/session-management.spec.ts tests/e2e/form-validation.spec.ts --project=chromium",
    "test:e2e:coverage": "cross-env NODE_V8_COVERAGE=./.v8-coverage playwright test",
    "test:e2e:coverage:nocss": "cross-env NODE_V8_COVERAGE=./.v8-coverage SKIP_CSS_COVERAGE=1 playwright test",
    "test:e2e:coverage:skip": "cross-env SKIP_COVERAGE=1 npm run test:e2e",
    "test:e2e:coverage:debug": "cross-env NODE_V8_COVERAGE=./.v8-coverage DEBUG_COVERAGE=1 playwright test tests/e2e/auth.spec.ts --project=chromium",
    "test:e2e:coverage:bypass-thresholds": "cross-env NODE_V8_COVERAGE=./.v8-coverage BYPASS_COVERAGE_THRESHOLDS=1 playwright test",
    "test:e2e:coverage:ci": "cross-env NODE_V8_COVERAGE=./.v8-coverage NODE_OPTIONS=--max_old_space_size=4096 playwright test --workers=2",
    "coverage:smoke": "node scripts/coverage-smoke-check.js",
    "coverage:lcov": "node scripts/export-lcov.js",
    "coverage:view": "npx monocart serve-report ./monocart-report -p 8080",
    "test:e2e:coverage:core:auto": "npm run test:e2e:coverage:core && npm run coverage:view",
    "test:e2e:coverage:auto": "npm run test:e2e:coverage && npm run coverage:view",
    "test:e2e:coverage:nocss:auto": "npm run test:e2e:coverage:nocss && npm run coverage:view",
    "test:e2e:coverage:single:auto": "npm run test:e2e:coverage:single && npm run coverage:view",
    "test:e2e:coverage:bypass-thresholds:auto": "npm run test:e2e:coverage:bypass-thresholds && npm run coverage:view",
    "test:e2e:coverage:ci:auto": "npm run test:e2e:coverage:ci && npm run coverage:view"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --config ./config/eslint.js --fix",
      "prettier --config ./config/prettier.js --write",
      "tsc --noEmit"
    ],
    "*.{json,md,css}": [
      "prettier --config ./config/prettier.js --write"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-navigation-menu": "^1.2.10",
    "@radix-ui/react-popover": "^1.1.11",
    "@radix-ui/react-slot": "^1.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.75.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.503.0",
    "next": "15.3.1",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@shadcn/ui": "^0.0.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/postcss": "^4",
    "@tsconfig/next": "^2.0.3",
    "@types/node": "^22.15.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "monocart-reporter": "^2.9.0",
    "p-limit": "^4.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.2.8",
    "typescript": "^5",
    "v8-to-istanbul": "^9.1.0"
  }
}